# Smart Attendance System - Environment Configuration

# Database Configuration
DB_HOST=db
DB_USER=attendance_user
DB_PASS=attendance_pass
DB_NAME=smart_attendance

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Face Detection Configuration
ATTENDANCE_THRESHOLD=0.6
SMS_ENABLED=false
AUTO_CONFIRM_ATTENDANCE=true
ATTENDANCE_TIMEOUT=30

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# SMS API Configuration (Optional)
SMS_PROVIDER=twilio
SMS_API_KEY=your_api_key_here
SMS_API_SECRET=your_api_secret_here
SMS_SENDER_ID=your_sender_id_here

# Camera Configuration
DEFAULT_CAMERA_TIMEOUT=30
MAX_CAMERA_STREAMS=10

# Security Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8
