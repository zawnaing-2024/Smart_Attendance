FROM python:3.9-slim

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

# Install system dependencies in stages to avoid conflicts
RUN apt-get update && apt-get install -y \
    --no-install-recommends \
    --fix-missing \
    wget \
    curl \
    ca-certificates \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install build dependencies
RUN apt-get update && apt-get install -y \
    --no-install-recommends \
    build-essential \
    cmake \
    pkg-config \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install image processing libraries
RUN apt-get update && apt-get install -y \
    --no-install-recommends \
    libjpeg-dev \
    libpng-dev \
    libtiff-dev \
    libavcodec-dev \
    libavformat-dev \
    libswscale-dev \
    libv4l-dev \
    libxvidcore-dev \
    libx264-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install GUI libraries (for OpenCV)
RUN apt-get update && apt-get install -y \
    --no-install-recommends \
    libgtk-3-dev \
    libatlas-base-dev \
    libgomp1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libfontconfig1 \
    libice6 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt /app/requirements.txt
WORKDIR /app

# Install Python packages with specific versions for compatibility
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY src/face_detection/ /app/face_detection/
COPY src/ /app/src/

# Create necessary directories
RUN mkdir -p /app/uploads/faces /app/face_models

# Set proper permissions
RUN chmod -R 755 /app

EXPOSE 5000

CMD ["python", "face_detection/app.py"]
